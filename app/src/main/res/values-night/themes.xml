<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.RemoteRunner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorControlNormal">@color/iconColor</item>
        <item name="colorControlActivated">@color/accentColor</item>
        <item name="colorControlHighlight">@color/accentLightColor</item>
        <item name="divider">@color/dividerColor</item>
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/accentTextColor</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.RemoteRunner.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.RemoteRunner.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.RemoteRunner.Large</item>
        <item name="toolbarStyle">@style/Widget.RemoteRunner.Toolbar</item>
    </style>

    <style name="Theme.RemoteRunner" parent="Base.Theme.RemoteRunner" />

    <style name="ShapeAppearance.RemoteRunner.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.RemoteRunner.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.RemoteRunner.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Widget.RemoteRunner.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/textColorPrimary</item>
        <item name="subtitleTextColor">@color/textColorSecondary</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.RemoteRunner.Toolbar</item>
    </style>

    <style name="ThemeOverlay.RemoteRunner" parent="">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
    </style>

    <style name="ThemeOverlay.RemoteRunner.Toolbar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
    </style>

    <style name="Widget.RemoteRunner.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.RemoteRunner.Medium</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Widget.RemoteRunner.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.RemoteRunner.Medium</item>
        <item name="strokeColor">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>
</resources>